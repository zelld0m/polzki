@model Exam.Models.EventsResponse;
@{
    ViewData["Title"] = "Event";
}
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
<div class="row">
    <div class="col-lg-12">
        <table><br>
            <tr>
                <td>Event Id</td>
                
                <td>Event Name</td>
            </tr>

            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.EventName</td>
                </tr>
            }
             <body>
            <form asp-action="SingleAttendee">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="SearchAttendee" class="btn btn-primary" />

                </div>

            </form>
         </body>
            
            </table>
    </div>
</div>
