<div class="row">
    <div class="col-lg-12">
        <form method="get" asp-controller="Home" asp-action="AddAttendee">
            <label asp-for="Data.ID">Attendee ID:</label>
            <input type="text" id="Name" asp-for="Data.Name" name="AttendeeName" />
            <input type="text" id="Name" asp-for="Data.Email" name="Email" />
            <input type="text" id="EventID" asp-for="Data.ID" name="EventID" />
            <input type="submit" value="Submit" />

        </form>
        <div>
